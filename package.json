    "@types/react-dom": "^16.9.6",
    "@types/tinycolor2": "^1.4.2",
    "aliasify": "^2.1.0",
    "browserify": "^16.5.1",
    "parcel": "^1.12.4",
    "prettier": "^1.19.1",
    "tsify": "^4.0.1",
    "typescript": "^3.8.3",
    "uglifyify": "^5.0.2"
  },
  "dependencies": {
    "@emotion/core": "^10.0.28",
    "@emotion/styled": "^10.0.27",
    "emotion-theming": "^10.0.27",
    "promise-polyfill": "^8.1.3",
    "ramda": "^0.26.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
