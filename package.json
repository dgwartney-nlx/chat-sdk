{
  "name": "nlx-chat-sdk",
  "version": "0.2.4",
  "description": "SDK to talk to NLX bots",
  "main": "lib/index.js",
  "scripts": {
    "start:simple": "parcel examples/simple.html",
    "start:with-react": "parcel examples/with-react.html",
    "start:widget": "parcel examples/widget.html",
    "build:package": "rm -rf lib && mkdir lib && tsc && mv lib/src/* lib && rm -rf lib/examples lib/src",
